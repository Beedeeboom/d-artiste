<div class="container">
<br>
<br>
<br>
<p id="notice"><%= notice %></p>

<h1>My Artworks</h1>
<table>
  <thead>
    <tr>
      <th><th>
      <th>Title</th>
      <th>Description</th>
      <th>Size</th>
      <th>Price</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr>
      <td><%= image_tag(art.picture, width: 250, height: 160) if art.picture.attached? %></td>
        <td><%= art.title %></td>
        <td><%= art.description %></td>
        <td><%= art.size %></td>
        <td><%= art.price %></td>
        <td><%= art.user_id %></td>
        <td><%= link_to 'Show', art %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Remove', art, method: :delete, data: { confirm: 'Are you sure, you want to remove your artwork?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Art', new_art_path %>
</div>