<!DOCTYPE html>
<html>
  <head>
    <title>D-Artiste</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  </head>

  <body style="background-image: url(/assets/background-pink-blue.jpg); background-repeat: no-repeat; background-attachment: fixed; background-position: center; background-size: cover;">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

      <%= link_to root_path do %>
      <%= image_tag("D-Artiste-Logo-small.png", alt: "logo", class: "navbar-brand d-flex align-items-center") %>
      <% end %>
    
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "About", about_path, class: "nav-link" %>
          </li>
          </li>
          <li class="nav-item active">
            <%= link_to "Buy Artworks", arts_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Contact Us", contact_path, class: "nav-link" %>
          </li>
        <% if user_signed_in? %>

        <ul class="navbar-nav justify-content-end">
          <li class="nav-item active">
            <%= link_to "My Account", edit_user_registration_path, method: "edit", class: "btn btn-secondary btn-sm ml-3 mr-3"%>
          </li>
          <li class="nav-item active">
            <%= link_to "Log Out", destroy_user_session_path, method: "delete", class: "btn btn-secondary btn-sm mr-3 text-white" %>
          </li>
        </ul>

        <% else %>

        <ul class="navbar-nav justify-content-end">
          <li class="nav-item active">
            <%= link_to "Log In", new_user_session_path, class: "btn btn-secondary btn-sm ml-3 mr-3 text-white" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary btn-sm mr-3 text-white" %>
          </li>
        </ul>

        <% end %> 
         
        </ul>
          <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Artworks..." aria-label="Search">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
          </form>
      </div>
    </nav> 
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p> 
    <%= yield %>
  </body>
</html>
